<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_xlarge"
    android:layout_marginTop="@dimen/spacing_xxxlarge"
    android:layout_marginBottom="@dimen/spacing_large"
    android:orientation="vertical">

    <!-- TODO Lottie animation will be replaced with the new one -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loadingAnimationLottieView"
        android:layout_width="164dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/modalityLineView"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/bluetooth_loading_animation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xlarge"
        android:text="@string/looking_for_devices"
        android:textAppearance="@style/TextAppearance.Body.Large.Sans.Medium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:text="@string/please_make_sure_that_your_ledger"
        android:textAppearance="@style/TextAppearance.Body.Sans"
        android:textColor="@color/text_gray" />

</LinearLayout>
