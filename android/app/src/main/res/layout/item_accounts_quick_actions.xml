<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/hero_bg"
    android:paddingVertical="@dimen/spacing_xxxlarge"
    tools:ignore="MissingConstraints">

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="buyAlgoButton, swapButton, sendButton,scanQrButton"
        app:flow_maxElementsWrap="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buyAlgoButton"
        style="@style/IconButton.Transparent.QuickAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buy_algo"
        app:icon="@drawable/ic_algo_quick_action_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/swapButton"
        style="@style/IconButton.Transparent.QuickAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/swap"
        app:icon="@drawable/ic_swap_helper_button_bg_ghost" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sendButton"
        style="@style/IconButton.Transparent.QuickAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send"
        app:icon="@drawable/ic_send_helper_button_bg_ghost" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/scanQrButton"
        style="@style/IconButton.Transparent.QuickAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scan_qr"
        app:icon="@drawable/ic_qr_scan_helper_button_bg_ghost" />

</androidx.constraintlayout.widget.ConstraintLayout>
